{% extends 'base_front.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="profile-page">
        <h1 class="profile-header">Compte de {{ app.user.firstname }} {{ app.user.lastname }}</h1>
        <div class="profile-links">
            <ul class="profile-links-list">
                <li class="profile-link-item"><a href="{{ path('front_app_profile_edit_user') }}">Modifier mes informations personnelles</a></li>
                <li class="profile-link-item"><a href="{{ path('front_app_profile_edit_credentials') }}">Modifier le mot de passe</a></li>
            </ul>
        </div>
    </div>
{% endblock %}
